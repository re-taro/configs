{
	"name": "@re-taro/configs",
	"version": "0.0.0",
	"type": "module",
	"description": "re-taro's configs",
	"repository": "https://github.com/re-taro/configs",
	"author": "Rintaro Itokawa <me@re-taro.dev> (https://re-taro.dev)",
	"license": "MIT",
	"packageManager": "pnpm@10.6.1",
	"exports": {
		"./eslint": {
			"default": {
				"types": "./dist/eslint/index.d.ts",
				"default": "./dist/eslint/index.js"
			}
		},
		"./prettier": {
			"default": {
				"types": "./dist/prettier/index.d.ts",
				"default": "./dist/prettier/index.js"
			}
		}
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "tsc -b tsconfig.build.json",
		"format": "prettier --write .",
		"lint": "pnpm run --parallel /^lint:.*/",
		"lint:eslint": "eslint .",
		"lint:prettier": "prettier --cache --check .",
		"lint:tsc": "tsc -b"
	},
	"peerDependencies": {
		"eslint": "^9.0.0",
		"prettier": "^3.0.0",
		"prettier-plugin-jsdoc": "^1.0.0",
		"prettier-plugin-pkg": "^0.18.0",
		"prettier-plugin-sort-json": "^3.0.0 || ^4.0.0"
	},
	"peerDependenciesMeta": {
		"eslint": {
			"optional": true
		},
		"prettier": {
			"optional": true
		},
		"prettier-plugin-jsdoc": {
			"optional": false
		},
		"prettier-plugin-pkg": {
			"optional": false
		},
		"prettier-plugin-sort-json": {
			"optional": false
		}
	},
	"devDependencies": {
		"@re-taro/configs": "file:.",
		"@types/node": "22.13.10",
		"eslint": "9.22.0",
		"pnpm": "10.6.1",
		"prettier": "3.5.3",
		"prettier-plugin-jsdoc": "1.3.2",
		"prettier-plugin-tailwindcss": "0.6.11",
		"typescript": "5.8.2"
	}
}
